<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.mierzejewski.inz"
    android:versionCode="3"
    android:versionName="1.0.3">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-sdk tools:overrideLibrary="com.github.danielnilsson9.colorpickerview"/>

    <uses-sdk android:minSdkVersion="14" />
    <application
        android:label="@string/app_name"
        android:name="com.mierzejewski.inz.MainApp"
        android:theme="@style/ApplicationTheme"
        android:icon="@drawable/ic_home">
        <activity
            android:name="com.mierzejewski.inz.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service android:name="com.mierzejewski.inz.services.CurrencyExchangeDownloadService" />
        <activity
            android:name="com.mierzejewski.inz.DetailActivity"
            android:label="@string/app_name"
            android:parentActivityName="com.mierzejewski.inz.MainActivity">
        </activity>
    </application>
</manifest>